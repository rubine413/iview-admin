@import 'global.styl'

html, body, #app
    width 100%
    height 100%
    overflow hidden
    min-width 320px
    
body
    font-family $font
    font-size $font-size
    color $font-color
    line-height 1.5
  
h1,h2,h3,h4,h5,h6,b,i
    font-weight normal
    font-style normal

.page
    width 100%
    height 100%
    position relative
 
code, kbd, pre, samp
    font-family Consolas,Menlo,Courier,monospace
    font-size 1em  
code
    display inline-block
    background #f7f7f7
    margin 0 3px
    padding 1px 5px
    border-radius 3px
    border 1px solid #eee
    color #666    

::-webkit-scrollbar
    width 10px
    height 10px
    background-color #999

/* 滚动条的轨道 */
::-webkit-scrollbar-track
    box-shadow inset 0 0 5px rgba(0,0,0,.3)
    background-color #67687D

/* 滚动条的滑块按钮 */
::-webkit-scrollbar-thumb
    border-radius 10px
    background-color $primary-color
    box-shadow inset 0 0 5px #666

/* 滚动条的上下两端的按钮 */
::-webkit-scrollbar-button
    height 10px
    background-color #B0AEDA

/** iview Collapse 折叠面板 图标与文字太紧凑 */
.ivu-collapse > .ivu-collapse-item > .ivu-collapse-header > i
    margin-right 6px